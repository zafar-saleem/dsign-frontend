<form class="form-horizontal ds-m-register">
    <h3 class="ds-m-register-title">Register below</h1>
    <div class="form-group">
        <label for="register-email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="register-email" placeholder="Email">
        </div>
    </div>
    <div class="form-group">
        <label for="register-password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="register-password" placeholder="Password" class="ds-js-password">
        </div>
    </div>
    <div class="form-group">
        <label for="register-repeat-password" class="col-sm-2 control-label">Repeat Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="register-repeat-password" placeholder="Password" class="ds-js-rpassword">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default btn-primary">Register</button>
        </div>
    </div>
</form>

