<form class="form-horizontal ds-m-register">
    <h3 class="ds-m-register-title">Register below</h3>
    <div class="form-group">
        <label for="register-email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control ds-js-register-email" id="register-email" placeholder="Email">
            <p class="error"></p>
        </div>
    </div>
    <div class="form-group">
        <label for="register-password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
            <p class="error"></p>
            <input type="password" class="form-control ds-js-register-password" id="register-password" placeholder="Password">
        </div>
    </div>
    <div class="form-group">
        <label for="register-repeat-password" class="col-sm-2 control-label">Repeat Password</label>
        <div class="col-sm-10">
            <p class="error"></p>
            <input type="password" class="form-control ds-js-register-rpassword" id="register-repeat-password" placeholder="Repeat Password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default btn-primary ds-m-btn-register">Register</button>
        </div>
    </div>
</form>

